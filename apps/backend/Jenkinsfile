pipeline {
    agent any
    environment {
        PROJECT_ID = 'seraphic-bliss-356414'
        CLUSTER_NAME = 'cluster001'
        LOCATION = 'us-central1-c'
        CREDENTIALS_ID = 'My First Project'
    }
    stages {
        stage('Deploy to K8s') {
            steps{
                withKubeConfig([credentialsId: env.CREDENTIALS_ID, serverUrl: '35.225.244.101']) {
                    sh 'kubectl get pods'
                }
            }
        }
    }
}